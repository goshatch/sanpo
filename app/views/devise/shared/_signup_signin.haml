%section.signup_signin
  .row.welcome
    %h1 Welcome to SANPO!
    %p Sign up or sign in to report walks, upload photos, and post comments.
  .row
    .span7
      %h2
        Already registered?
        %br
        %strong Sign in!
      = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
        = field_set_tag do
          .clearfix
            = f.label :login
            .input= f.text_field :login
          .clearfix
            = f.label :password
            .input= f.password_field :password
          - if devise_mapping.recoverable? && controller_name != 'passwords'
            .clearfix
              .input.forgot_password= link_to "Forgot your password?", new_password_path(resource_name)
          - if devise_mapping.rememberable?
            = f.hidden_field :remember_me, :value => 1
          .actions
            = f.submit "Sign in", :class => "btn info large"
          - if devise_mapping.omniauthable?
            - resource_class.omniauth_providers.each do |provider|
              = link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider)
    .span7
      %h2
        Not a member yet?
        %br
        Please
        %strong sign up!
      = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
        .errors= devise_error_messages!
        = field_set_tag do
          .clearfix
            = f.label :username
            .input= f.text_field :username
          .clearfix
            = f.label :email
            .input= f.text_field :email
          .clearfix
            = f.label :password
            .input= f.password_field :password
          .actions
            = f.submit "Join SANPO", :class => "btn info large createAccountButton"
