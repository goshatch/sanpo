<% first = true %>
[
<% @walks.each_with_index do |walk, index| %>
  <% if walk.published? %>
    <% if first -%>
      <% first = false -%>
    <% else -%>
      ,
    <% end -%>
    {
      "id": <%= walk.id %>,
      "link": "<%= walk_path(walk) %>",
      "title": "<%= walk.title %>",
      "latitude": <%= walk.latitude %>,
      "longitude": <%= walk.longitude %>,
      <% if walk.photos.count >= 1 -%>
        "icon": "<%= walk.photos.first.image.url(:thumb) %>",
      <% else -%>
        "icon": "/assets/default_walk_thumbnail.jpg",
      <% end -%>
      "length": "<%= walk.length_in_km %>"
    }
  <% end -%>
<% end %>
]
