%section.topbar
  .fill
    .container
      = link_to(image_tag("logo.png"), root_path, {:class => "brand"})
      - if user_signed_in?
        %ul.nav
          %li{:class => (controller.controller_name == "walks" and controller.action_name == "index") ? "active" : "" }= link_to(t("top.navigation.walks.recent"), root_path)
          %li{:class => (controller.controller_name == "walks" and controller.action_name == "new") ? "active" : "" }= link_to(t("top.navigation.walks.new"), new_walk_path)
      %ul.nav.secondary-nav
        - if user_signed_in?
          %li.dropdown{:data => {:dropdown => "dropdown"}}
            = link_to(current_user.email, "#", {:class => "dropdown-toggle"})
            %ul.dropdown-menu
              %li= link_to(t("top.navigation.account.edit"), edit_user_registration_path)
              %li.divider
              %li= link_to(t("top.navigation.account.sign_out"), destroy_user_session_path, :method => :delete)
        - else
          %li= link_to(t("top.navigation.account.sign_up"), new_user_registration_path)
          %li= link_to(t("top.navigation.account.sign_in"), new_user_session_path)
